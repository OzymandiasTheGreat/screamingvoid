{
  "$schema": "../../../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "expo build:web",
    "beforeDevCommand": "",
    "devPath": "http://localhost:19006",
    "distDir": "../web-build"
  },
  "package": {
    "productName": "Void",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "cmd": "backend",
            "name": "binaries/backend",
            "sidecar": true
          }
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "notification": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "copyFile": true,
        "createDir": false,
        "readDir": false,
        "readFile": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "writeFile": false
      }
    },
    "bundle": {
      "active": true,
      "category": "SocialNetworking",
      "copyright": "MIT (c) 2022 - Tomas Ravinskas",
      "deb": {
        "depends": []
      },
      "externalBin": ["binaries/backend"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "me.screamingvoid.app",
      "longDescription": "Like screaming into the Void...",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Void",
        "width": 800
      }
    ]
  }
}
